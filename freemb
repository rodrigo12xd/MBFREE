#!/bin/bash
cd $HOME
clear


echo -e "\033[1;32mESCOLHA UMAS DAS OPÇÕES ABAIXO:\033[1;37m"
echo -e "\033[1;31m1)Ganhar 50MB (1 vez por dia)\033[1;37m"
echo -e "\033[1;31m2)Ganhar 50MB (1 vez por dia)\033[1;37m"
echo -e "\033[1;31m3)Ganhar 10MB (até 5 vezes por dia)\033[1;37m"
echo -e "\033[1;31m4)VIVOEASY 50MB (1 vez por dia, somente pela manhã )\033[1;37m"
echo -e "\033[1;31m5)TESTAR TODAS AS OPÇÕES (RECOMENDADO)\033[1;37m"
echo " "

echo "INFORME UMA OPÇÃO:"
read OPTION

case $OPTION in
        1) mb1
        ;;
        2) mb2
        ;;
        3) mb3
        ;;
        4) mb4
        ;;
        5) mb5
        ;;
        *) echo -e "\033[1;31mOPCÃO INVÁLIDA!\033[1;37m"

   sleep 2
esac
clear
freemb

